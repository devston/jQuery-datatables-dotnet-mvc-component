{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "module": "esnext", // Could be es6 but its in case we use Dynamic import()
    "moduleResolution": "Node",
    "lib": [ "dom", "es5", "scripthost", "es7" ],
    "baseUrl": "Scripts",
    "rootDir": "Scripts",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "Scripts",
    "Scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
