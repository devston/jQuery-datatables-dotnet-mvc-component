    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "rootDir": "Scripts/TypeScript",
    "sourceMap": true,
    "target": "es5",
    "lib": [ "dom", "es5", "scripthost", "es7" ],
