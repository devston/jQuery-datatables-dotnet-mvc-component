  },
  "include": [
    "node_modules/@types/*/index.d.ts",
    "Scripts/TypeScript/**/*", 
    "Scripts/jquery-3.5.1.js"
  ],
  "exclude": [
    //"node_modules",
    "wwwroot"
  ]
}
